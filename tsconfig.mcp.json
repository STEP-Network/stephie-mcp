{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": ".",
		"strict": false,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"checkJs": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmitOnError": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": false,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"moduleResolution": "node"
	},
	"include": ["mcp-server.ts", "lib/**/*"],
	"exclude": ["node_modules", "dist", "api/**/*", "lib/auth/stack-auth.ts"]
}
