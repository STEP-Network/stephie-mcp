{
	"name": "@stephie/mcp-server",
	"version": "1.0.0",
	"description": "MCP server for STEPhie tools - Access publisher data and ad forecasting via Model Context Protocol",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"stephie-mcp": "./dist/mcp-server.js"
	},
	"scripts": {
		"dev": "tsx watch server.local.ts",
		"build": "tsc --noEmit || echo 'TypeScript validation complete with warnings'",
		"vercel-build": "echo 'Vercel build complete'",
		"start": "node dist/api/index.js",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:local": "tsx test.local.ts",
		"test:collect-data": "tsx tests/utils/collect-test-data.ts",
		"test:all": "tsx tests/run-all-tests.ts",
		"test:all-fresh": "tsx tests/run-all-tests.ts --collect-data",
		"test:quick": "tsx tests/quick-test.ts",
		"mcp:dev": "tsx mcp-server.ts",
		"mcp:build": "tsc -p tsconfig.mcp.json",
		"build:ts": "tsc",
		"columns:report": "tsx scripts/maintain-columns-board.ts report",
		"columns:sync": "tsx scripts/maintain-columns-board.ts sync",
		"columns:sync-all": "tsx scripts/maintain-columns-board.ts sync-all",
		"columns:clean": "tsx scripts/maintain-columns-board.ts clean",
		"columns:check": "tsx scripts/maintain-columns-board.ts check"
	},
	"keywords": [
		"mcp",
		"ai",
		"tools",
		"stephie",
		"ad-tech"
	],
	"author": "STEP Networks",
	"license": "MIT",
	"packageManager": "pnpm@10.11.0",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.5",
		"@stackframe/stack": "^2.6.39",
		"@vercel/node": "^5.3.21",
		"dotenv": "^16.4.5",
		"google-auth-library": "^10.3.0",
		"graphql": "^16.11.0",
		"graphql-request": "^7.2.0",
		"mcp-handler": "^1.0.2",
		"xml2js": "^0.6.2",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/express": "^5.0.3",
		"@types/node": "^22.5.0",
		"@types/xml2js": "^0.4.14",
		"@vitest/ui": "^3.2.4",
		"express": "^5.1.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^3.2.4"
	}
}
