{
  "name": "@stephie/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for STEPhie tools - Access publisher data and ad forecasting via Model Context Protocol",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "stephie-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "dev": "tsx watch server.local.ts",
    "build": "tsc --noEmit && echo 'TypeScript validation complete'",
    "vercel-build": "echo 'Vercel build complete'",
    "start": "node dist/api/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:local": "tsx test.local.ts",
    "mcp:dev": "tsx mcp-server.ts",
    "mcp:build": "tsc -p tsconfig.mcp.json",
    "build:ts": "tsc"
  },
  "keywords": [
    "mcp",
    "ai",
    "tools",
    "stephie",
    "ad-tech"
  ],
  "author": "STEP Networks",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@stackframe/stack": "^2.6.39",
    "@vercel/node": "^5.3.21",
    "dotenv": "^16.4.5",
    "google-auth-library": "^10.3.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "mcp-handler": "^1.0.2",
    "xml2js": "^0.6.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.5.0",
    "@types/xml2js": "^0.4.14",
    "express": "^5.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
