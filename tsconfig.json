{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"outDir": "./dist",
		"rootDir": ".",
		"strict": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["api/**/*", "lib/**/*"],
	"exclude": ["node_modules", "dist", "lib/auth/stack-auth.ts"]
}
